.Layout
	background-image url('../images/city.jpg')
	background-size cover
	display flex
	flex-direction column
	justify-content space-between
	margin 0.5rem
	min-height 100vh
	padding 0.5rem
	test(brown)
	> section
		margin 0.5rem
	&-main 
		display flex
		justify-content space-between
	&-status
		test(green)
		width 200px
	&-battle
		background-image url('../images/pattern.jpg')
		test(orange)
		flex 1
		margin 0.5rem
	&-phases
		test(purple)
		position relative
		width 200px
	&-antagonist
		test(lightblue)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between