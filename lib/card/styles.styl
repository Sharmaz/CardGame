
.Card
	width 170px
	background #c2ac37
	border 5px solid black
	box-shadow 0 0 10px rgba(black, .5)
	border-radius .5rem
	padding .5rem
	

	&-description
		background white
		padding .5rem
		font-size 12px
		margin-bottom .5rem
		border 2px solid black
	&-name 
		color white 
		font-size 1rem
		text-transform uppercase
		margin 0 0 .5rem 0
		overflow(ellipsis)

	&-image
		width 100%
	&-attack
		background black
		color white 
		font-size .8rem
		
		
